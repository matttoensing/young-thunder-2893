<h1>Movie Title: <%= @movie.title %></h1>
<h4>Year of Production: <%= @movie.creation_year %></h4>
<h5>Genre: <%= @movie.genre %></h5>

<% @movie.order_actors_by_age.each do |actor| %>
  <p><%= actor.name %></p>
  <p><%= actor.age %></p>
<% end  %>

<h4>Average Age of Actors: <%= @movie.average_age_of_actors%></h5>

<h3>Add Actor to Movie</h3>

<%= form_tag("/movies/#{@movie.id}", method: 'post') do %>
  <%= label_tag "name", "Name" %>
  <%= text_field_tag(:name) %> <br><br>
  <%= label_tag "age", "Age" %>
  <%= text_field_tag(:age) %>
  <%= submit_tag("Submit")%>
<% end  %>
